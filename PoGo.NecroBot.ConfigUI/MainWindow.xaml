                                <xctk:DoubleUpDown Style="{StaticResource DoubleUpDownMd}" Value="{Binding Settings.UseGreatBallAboveIv}" FormatString="F2" Increment=".5" Maximum="100.00" Minimum="0.00" ToolTip="When Pokemon above this IV% are found, a Great Ball will be used for throws."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                <Label Style="{StaticResource LineItemLabel}" Content="Use Ultra Ball Above IV%" ToolTip="When Pokemon above this IV% are found, an Ultra Ball will be used for throws." />
                                <xctk:DoubleUpDown Style="{StaticResource DoubleUpDownMd}" Value="{Binding Settings.UseUltraBallAboveIv}" FormatString="F2" Increment=".5" Maximum="100.00" Minimum="0.00" ToolTip="When Pokemon above this IV% are found, an Ultra Ball will be used for throws."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                <Label Style="{StaticResource LineItemLabel}" Content="Use Great Ball Below % Probability" ToolTip="QED." />
                                <xctk:DoubleUpDown Style="{StaticResource DoubleUpDownMd}" Value="{Binding Settings.UseGreatBallBelowCatchProbability}" FormatString="P2" Increment=".005" Maximum="1" Minimum="0" ToolTip="QED."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                <Label Style="{StaticResource LineItemLabel}" Content="Use Ultra Ball Below % Probability" ToolTip="QED." />
                                <xctk:DoubleUpDown Style="{StaticResource DoubleUpDownMd}" Value="{Binding Settings.UseUltraBallBelowCatchProbability}" FormatString="P2" Increment=".005" Maximum="1" Minimum="0" ToolTip="QED."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                <Label Style="{StaticResource LineItemLabel}" Content="Use Master Ball Below % Probability" ToolTip="QED." />
                                <xctk:DoubleUpDown Style="{StaticResource DoubleUpDownMd}" Value="{Binding Settings.UseMasterBallBelowCatchProbability}" FormatString="P2" Increment=".005" Maximum="1" Minimum="0" ToolTip="QED."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                <Label Style="{StaticResource LineItemLabel}" Content="Use Berries when Above CP" ToolTip="Use berries on Pokemon at or above this CP level." />
                                <xctk:IntegerUpDown Style="{StaticResource IntegerUpDownMd}" Value="{Binding Settings.UseBerriesMinCp}" Maximum="9999" Minimum="0" ToolTip="Use berries on Pokemon at or above this CP level."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                <Label Style="{StaticResource LineItemLabel}" Content="Use Berries when Above IV%" ToolTip="Use berries on Pokemon at or above this IV%." />
                                <xctk:SingleUpDown Style="{StaticResource SingleUpDownMd}" Value="{Binding Settings.UseBerriesMinIv}" Increment="0.5" Maximum="100" Minimum="0" ToolTip="Use berries on Pokemon at or above this IV%."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                <Label Style="{StaticResource LineItemLabel}" Content="Use Berries Below % Probability" ToolTip="QED." />
                                <xctk:DoubleUpDown Style="{StaticResource DoubleUpDownMd}" Value="{Binding Settings.UseBerriesBelowCatchProbability}" FormatString="P2" Increment=".005" Maximum="1" Minimum="0" ToolTip="QED."/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                <Label Style="{StaticResource LineItemLabel}" Content=" Operator" ToolTip="AND means the Pokemon must meet both IV% and CP requirements - OR means either." />
                                <ComboBox ItemsSource="{Binding OperatorsCollection}" SelectedItem="{Binding Settings.UseBerriesOperator}" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                <CheckBox Content="Enable Human-like Throws" IsChecked="{Binding Settings.EnableHumanizedThrows}" ToolTip="This system varies the throw quality in order to keep you from being detected." />
                            </StackPanel>
                            <StackPanel Visibility="{Binding Settings.EnableHumanizedThrows, Converter={StaticResource VisConv}}">
                                <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                    <Label Style="{StaticResource LineItemLabel}" Content="Nice Throw % Chance" ToolTip="QED." />
                                    <xctk:IntegerUpDown Style="{StaticResource IntegerUpDownMd}" Value="{Binding Settings.NiceThrowChance}" Maximum="100" Minimum="0" ToolTip="QED."/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                    <Label Style="{StaticResource LineItemLabel}" Content="Great Throw % Chance" ToolTip="QED." />
