                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                    <Label Style="{StaticResource LineItemLabel}" Content="Curve Throw % Chance" ToolTip="CurveBalls are a throw add-on and separate from quality, setting this too high may get you flagged." />
                                    <xctk:IntegerUpDown Style="{StaticResource IntegerUpDownMd}" Value="{Binding Settings.CurveThrowChance}" Maximum="100" Minimum="0" ToolTip="CurveBalls are a throw add-on and separate from quality, setting this too high may get you flagged."/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Style="{StaticResource LineItemPanel}">
                                    <Label Style="{StaticResource LineItemLabel}" Content="Force Great Throw Over IV%" ToolTip="QED." />
                                    <xctk:DoubleUpDown Style="{StaticResource DoubleUpDownMd}" Value="{Binding Settings.ForceGreatThrowOverIv}" FormatString="F2" Increment=".5" Maximum="100.00" Minimum="0.00" ToolTip="QED."/>
